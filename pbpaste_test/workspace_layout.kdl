layout {
    tab name="Main Dashboard" {
        pane size=1 {
            name "System Stats"
            command "htop"
        }
        pane {
            split_direction="vertical" {
                pane name="Pipeline 1" {
                    command "bash"
                    args "-c" "echo 'Pipeline 1 monitor would run here'"
                }
                pane name="Pipeline 2" {
                    command "bash"
                    args "-c" "echo 'Pipeline 2 monitor would run here'"
                }
                pane name="Pipeline 3" {
                    command "bash"
                    args "-c" "echo 'Pipeline 3 monitor would run here'"
                }
            }
        }
        pane size=1 {
            name "Alerts Watcher"
            command "bash"
            args "-c" "echo 'Alerts watcher would run here'"
        }
    }

    tab name="Data Processing" {
        pane split_direction="vertical" {
            pane size="60%" {
                name "Jupyter Lab"
                command "bash"
                args "-c" "echo 'Jupyter Lab would start here'"
            }
            pane {
                split_direction="horizontal" {
                    pane name="Database CLI" {
                        command "bash"
                        args "-c" "echo 'Database CLI would run here'"
                    }
                    pane name="Redis Monitor" {
                        command "bash"
                        args "-c" "echo 'Redis Monitor would run here'"
                    }
                    pane name="Kafka Consumer" {
                        command "bash"
                        args "-c" "echo 'Kafka Consumer would run here'"
                    }
                }
            }
        }
    }

    tab name="Model Training" {
        pane split_direction="vertical" {
            pane size="50%" {
                name "Training Logs"
                command "bash"
                args "-c" "echo 'Model training would run here'"
            }
            pane {
                split_direction="horizontal" {
                    pane name="Model Evaluation" {
                        command "bash"
                        args "-c" "echo 'Model evaluation would run here'"
                    }
                    pane name="GPU Monitoring" {
                        command "bash"
                        args "-c" "echo 'GPU monitoring would run here'"
                    }
                }
            }
        }
    }

    tab name="Visualization" {
        pane {
            name "Streamlit App"
            command "bash"
            args "-c" "echo 'Streamlit app would run here'"
        }
    }

    tab name="ETL" {
        pane {
            split_direction="horizontal" {
                pane {
                    split_direction="vertical" {
                        pane name="Extract Jobs" {
                            command "bash"
                            args "-c" "echo 'Extract jobs would run here'"
                        }
                        pane name="Transform Jobs" {
                            command "bash"
                            args "-c" "echo 'Transform jobs would run here'"
                        }
                    }
                }
                pane {
                    split_direction="vertical" {
                        pane name="Load Jobs" {
                            command "bash"
                            args "-c" "echo 'Load jobs would run here'"
                        }
                        pane name="ETL Logs" {
                            command "bash"
                            args "-c" "echo 'ETL logs would display here'"
                        }
                    }
                }
            }
        }
    }
}